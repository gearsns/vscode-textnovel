{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "narou text",
	"patterns": [
		{
			"include": "#ruby"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#miteminlink"
		}
	],
	"repository": {
		"ruby": {
			"patterns": [{
				"match": "[^\\|｜]+([\\(（《])(.*?)([\\)）》])",
				"captures":{
					"1": {
						"name": "keyword.control.txt"
					},
					"2": {
						"name": "string"
					},
					"3": {
						"name": "keyword.control.txt"
					}
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.txt",
				"match": "[\\|｜]"
			}]
		},
		"miteminlink": {
			"name": "keyword.control.txt",
			"match": "\\<.*?\\|.*?\\>"
		}
	},
	"scopeName": "source.narou"
}
