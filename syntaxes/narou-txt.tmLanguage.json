{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "narou text",
	"patterns": [
		{
			"include": "#ruby"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#miteminlink"
		}
	],
	"repository": {
		"ruby": {
			"patterns": [{
				"match": "(([\\|｜].+?)|([一-龠々仝〆〇ヶ]+|[-_@0-9a-zA-Z]+|[—―＿＠０-９Ａ-Ｚａ-ｚ]+))([\\(（《])(.+?)([\\)）》])",
				"captures": {
					"4": { "name": "string.quoted" },
					"6": { "name": "string.quoted" }
				  },
				  "name": "keyword"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.txt",
				"match": "[\\|｜]"
			}]
		},
		"miteminlink": {
			"name": "keyword.control.txt",
			"match": "\\<.*?\\|.*?\\>"
		}
	},
	"scopeName": "source.narou"
}
