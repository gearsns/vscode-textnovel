{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "aozora text",
	"patterns": [
		{
			"include": "#command"
		},
		{
			"include": "#ruby"
		}
	],
	"repository": {
		"command": {
			"patterns": [{
				"match": "(［＃)(.*?)(］)",
				"captures":{
					"1": {
						"name": "keyword"
					},
					"2": {
						"name": "string.quoted"
					},
					"3": {
						"name": "keyword"
					}
				}
			}]
		},
		"ruby": {
			"patterns": [{
				"match": "((｜.+?)|([一-龠々仝〆〇ヶ]+|[-_@0-9a-zA-Z]+|[—―＿＠０-９Ａ-Ｚａ-ｚ]+))(《)(.+?)(》)",
				"captures": {
					"4": { "name": "string.quoted" },
					"6": { "name": "string.quoted" }
				  },
				  "name": "keyword"
			}]
		}
	},
	"scopeName": "source.aozora"
}
